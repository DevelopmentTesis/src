<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Usuario">

	<resultMap id="result" type="Usuario">
		<result property="nombre" column="NOMBRE" />
		<result property="password" column="PASSWORD" />
	</resultMap>

	<select id="getAll" resultMap="result">
		SELECT * FROM USUARIO
	</select>

	<select id="getById" parameterType="int" resultMap="result">
		SELECT * FROM
		USUARIO WHERE ID_USUARIO = #{id}
	</select>

	<delete id="deleteById" parameterType="int">
		DELETE from USUARIO WHERE
		ID_USUARIO = #{id};
	</delete>

	<insert id="insert" parameterType="Usuario">
		INSERT INTO USUARIO (ID_USUARIO, NOMBRE,
		PASSWORD,ID_TIPO_USUARIO,USER_TOKEN)
		VALUES (#{nombre}, #{password},
		#{id_tipo_usuario}, #{user_token});
		<selectKey keyProperty="id" resultType="int" order="AFTER">
			select
			last_insert_id() as id
		</selectKey>
	</insert>

	<!-- Call Procedure -->
	<select id="spValidaUsuario" statementType="CALLABLE" resultType="boolean" >
		{call
		sp_validaUsuario(
		#{nombre,jdbcType=VARCHAR,mode=IN},
		#{password,jdbcType=VARCHAR, mode=IN},
		#{resultado,jdbcType=BOOLEAN,mode=OUT}
		)}
	</select>


</mapper>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
android:layout_width="fill_parent" android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<EditText android:id="@+id/EditText02" android:layout_width="220px"
android:layout_height="wrap_content"
android:layout_below="@+id/EditText01"
android:layout_alignLeft="@+id/EditText01" />

<Button
    android:id="@+id/Button02"
    android:layout_width="100px"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/EditText02"
    android:layout_below="@+id/EditText02"
    android:layout_marginRight="38dp"
    android:layout_marginTop="88dp"
    android:text="Reset" />

<Button
    android:id="@+id/Button01"
    android:layout_width="100px"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/Button02"
    android:layout_alignBottom="@+id/Button02"
    android:layout_toLeftOf="@+id/EditText02"
    android:text="Submit" />

<EditText
    android:id="@+id/EditText01"
    android:layout_width="220px"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@+id/TextView01"
    android:layout_marginRight="32dp"
    android:ems="10" />

<TextView
    android:id="@+id/TextView02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/EditText02"
    android:layout_toLeftOf="@+id/Button01"
    android:text="Second Name:"
    android:width="100px" />

<TextView
    android:id="@+id/TextView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/TextView02"
    android:layout_alignParentTop="true"
    android:layout_marginTop="40dp"
    android:text="First Name:"
    android:width="100px" />

</RelativeLayout>
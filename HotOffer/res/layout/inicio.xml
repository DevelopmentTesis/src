<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="254dp"
        android:layout_height="100dp"
        android:src="@drawable/ImagenHotOffer" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.00"
        android:background="@color/gris_2"
        android:ems="8"
        android:hint="@string/IN_USUARIO"
        android:shadowColor="@color/celeste_2"
        android:textColor="@color/gris_1"
        android:textSize="@dimen/medio"
        android:textStyle="normal"
        android:typeface="normal" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.00"
        android:background="@color/gris_2"
        android:ems="8"
        android:hint="@string/IN_CLAVE"
        android:inputType="textPassword"
        android:shadowColor="@color/celeste_2"
        android:textColor="@color/gris_1"
        android:textSize="@dimen/medio"
        android:textStyle="normal"
        android:typeface="normal" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/iniciar"
        android:layout_width="232sp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5sp"
        android:background="@color/naranjo"
        android:gravity="center"
        android:text="Iniciar"
        android:textAlignment="center"
        android:textColor="@color/gris"
        android:textColorHint="@color/Cranberry"
        android:textSize="@dimen/grande"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="20dp"
        android:text="@string/registrarse"
        android:textAlignment="center" />

</LinearLayout>